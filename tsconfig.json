{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
	"baseUrl": "./src",
	"allowJs": true,
    "paths": {
		"@modules/*": ["modules/*"],
		"@config/*": ["config/*"],
		"@shared/*": ["shared/*"]
	},
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["./coverage", "./jest.config.js", "./prettier.config.js"]
}
